{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"go-install",
				"npm-watch"
			]
		},
		{
			"label": "go-install",
			"group": "build",
			"type": "shell",
			"command": "go build cmd/wireplus/main.go && mv -f main $GOPATH/bin/wireplus",
			"options": {
				"cwd": "${workspaceFolder}/../wireplus"
			}
		},
		{
			"label": "npm-compile",
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "npm-watch",
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc-watch"
			]
		}
	]
}